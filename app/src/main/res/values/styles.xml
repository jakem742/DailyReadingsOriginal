<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorTheme">@color/colorPrimary</item>
        <item name="colorBackground">@color/colorDark</item>
        <item name="colorBackgroundHighlight">@color/colorPrimary</item>
        <item name="colorBackgroundLight">@color/colorLight</item>
        <item name="colorBackgroundOverlay">@color/colorOverlayTransparent</item>
        <item name="colorHighlightText">@color/colorLight</item>
        <item name="colorBodyText">@color/colorLight</item>
        <item name="colorButtonTextLight">@color/colorLightSecondary</item>
        <item name="colorButtonTextDark">@color/colorDark</item>
        <item name="colorReadingText">@color/colorDark</item>
        <item name="colorBackgroundWidget">@color/colorDarkTransparent</item>
        <item name="colorWidgetText">@color/colorPrimary</item>
        <item name="colorButtonLight">@color/colorDarkSecondary</item>
        <item name="colorButtonDark">@color/colorDark</item>
        <item name="colorButtonRead">@color/colorDark</item>
        <item name="colorButtonReadText">@color/colorLightSecondary</item>
        <item name="colorButtonBack">@color/colorDarkSecondary</item>
        <item name="colorButtonBackText">@color/colorLightSecondary</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- custom themed attributes -->
        <item name="titleTextSize">@dimen/text_size_medium</item>
        <item name="subtitleTextSize">@dimen/text_size_small</item>
        <item name="contentTextSize">@dimen/text_size_small</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorTheme">@color/colorPrimary</item>
        <item name="colorBackground">@color/colorLightBackground</item>
        <item name="colorBackgroundHighlight">@color/colorPrimary</item>
        <item name="colorBackgroundLight">@color/colorLight</item>
        <item name="colorBackgroundOverlay">@color/colorOverlayTransparent</item>
        <item name="colorHighlightText">@color/colorLight</item>
        <item name="colorBodyText">@color/colorDark</item>
        <item name="colorButtonTextLight">@color/colorLightSecondary</item>
        <item name="colorButtonTextDark">@color/colorDark</item>
        <item name="colorReadingText">@color/colorDark</item>
        <item name="colorBackgroundWidget">@color/colorDarkTransparent</item>
        <item name="colorWidgetText">@color/colorPrimary</item>
        <item name="colorButtonLight">@color/colorLightSecondary</item>
        <item name="colorButtonDark">@color/colorDark</item>
        <item name="colorButtonRead">@color/colorDark</item>
        <item name="colorButtonReadText">@color/colorLightSecondary</item>
        <item name="colorButtonBack">@color/colorLightSecondary</item>
        <item name="colorButtonBackText">@color/colorDark</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>


        <!-- custom themed attributes -->
        <item name="titleTextSize">@dimen/text_size_medium</item>
        <item name="subtitleTextSize">@dimen/text_size_small</item>
        <item name="contentTextSize">@dimen/text_size_small</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Make progress bar match theme colour-->
    <style name="ProgressBarOverlay">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- ========== -->
    <!-- Text sizes -->
    <!-- ========== -->
    <style name="AppTextSize">
        <item name="titleTextSize">@dimen/text_size_medium</item>
        <item name="subtitleTextSize">@dimen/text_size_small</item>
        <item name="contentTextSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTextSize.XSmall">
        <item name="titleTextSize">16sp</item>
        <item name="subtitleTextSize">12sp</item>
        <item name="contentTextSize">12sp</item>
    </style>

    <style name="AppTextSize.Medium">
        <item name="titleTextSize">20sp</item>
        <item name="subtitleTextSize">16sp</item>
        <item name="contentTextSize">16sp</item>
    </style>

    <style name="AppTextSize.Large">
        <item name="titleTextSize">22sp</item>
        <item name="subtitleTextSize">18sp</item>
        <item name="contentTextSize">18sp</item>
    </style>

    <style name="AppTextSize.XLarge">
        <item name="titleTextSize">24sp</item>
        <item name="subtitleTextSize">20sp</item>
        <item name="contentTextSize">20sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
